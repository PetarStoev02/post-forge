APP_NAME=PostForge
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database (MySQL for Sail)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=post_forge
DB_USERNAME=sail
DB_PASSWORD=password

# When using Herd (no Sail) with MySQL on port 3309, use:
# APP_URL=http://post-forge-back-end.test
# DB_HOST=127.0.0.1
# DB_PORT=3309
# DB_USERNAME=root
# DB_PASSWORD=
# SANCTUM_STATEFUL_DOMAINS=post-forge-back-end.test,localhost,127.0.0.1

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
# Use "sync" when Redis is not running (e.g. local Valet/Herd). Use "redis" with Sail.
QUEUE_CONNECTION=sync

# Use "file" when Redis is not running. Use "redis" with Sail or when Redis is installed locally.
CACHE_STORE=file

# Redis (for Horizon & Cache). Only needed when QUEUE_CONNECTION=redis or CACHE_STORE=redis.
# For Docker Sail use REDIS_HOST=redis. For local Redis use REDIS_HOST=127.0.0.1.
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@postforge.dev"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (for Media Storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=postforge-media
AWS_USE_PATH_STYLE_ENDPOINT=false

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1

# Frontend URL (for OAuth redirect after connecting social accounts)
FRONTEND_URL=http://localhost:3000

# ============================================
# SOCIAL PLATFORM OAUTH CREDENTIALS
# ============================================

# Twitter/X API v2
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_BEARER_TOKEN=

# Facebook/Meta
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Instagram (Instagram API with Instagram Login: https://developers.facebook.com/docs/instagram-platform, redirect: APP_URL/auth/instagram/callback)
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=

# Threads (Meta Threads API: https://developers.facebook.com/docs/threads, redirect: APP_URL/auth/threads/callback)
THREADS_CLIENT_ID=
THREADS_CLIENT_SECRET=

# LinkedIn (create app at https://www.linkedin.com/developers/apps, add OAuth 2.0 redirect URL: APP_URL/auth/linkedin-openid/callback)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# TikTok
TIKTOK_CLIENT_ID=
TIKTOK_CLIENT_SECRET=

# ============================================
# HORIZON SETTINGS
# ============================================
HORIZON_PREFIX=postforge_horizon:
